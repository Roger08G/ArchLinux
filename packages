# Actualizar el sistema e instalar paquetes esenciales
sudo pacman -Syu
sudo pacman -S --needed hyprland waybar hyprpaper kitty rofi grim slurp wl-clipboard wlr-randr \
  dunst blueman bluez bluez-utils playerctl brightnessctl \
  pipewire pipewire-alsa pipewire-audio pipewire-pulse wireplumber \
  xdg-desktop-portal-hyprland xdg-desktop-portal-gtk networkmanager thunar \
  ttf-jetbrains-mono-nerd ttf-firacode-nerd
sudo systemctl enable --now NetworkManager bluetooth


# Para AUR y paquetes adicionales (yay)
sudo pacman -S --needed base-devel git
git clone https://aur.archlinux.org/yay.git
cd yay && makepkg -si

yay -S visual-studio-code-bin spotify obsidian rofi-lbonn-wayland whatsapp-nativefier



# Node LTS con nvm
curl -fsSL https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
source ~/.bashrc  # o ~/.zshrc seg√∫n tu shell
nvm install --lts


# Rust
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
source ~/.cargo/env


